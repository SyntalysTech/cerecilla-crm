# ===========================================
# CerecillaCRM Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=sb_publishable_xxx

# Supabase Secret Key (server-only, NEVER expose to client)
SUPABASE_SECRET_KEY=sb_secret_xxx

# ===========================================
# Amazon SES Configuration
# ===========================================
# Configure these when SES is ready for production

AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SES_FROM_ADDRESS=info@yourdomain.com
SES_CONFIGURATION_SET=

# ===========================================
# WhatsApp Business API Configuration
# ===========================================
# Meta Graph API credentials for WhatsApp Business

META_ACCESS_TOKEN=your_meta_access_token
WHATSAPP_WABA_ID=your_waba_id
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_PHONE_E164=+34643879149
WHATSAPP_CERTIFICATE=your_certificate_from_whatsapp_manager
GRAPH_API_VERSION=v18.0
